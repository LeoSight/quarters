{% extends "layout.twig" %}

{% block header %}
    <h1>STATISTIKY</h1>
{% endblock %}

{% block main %}
    <h2 class="mt-1 mb-1">ZABITÝCH VOJÁKŮ</h2>
    <table>
        <thead>
            <tr>
                <td>Jméno</td>
                <td>Frakce</td>
                <td title="Kills (Zabití)">K</td>
                <td title="Deaths (Smrtí)">D</td>
            </tr>
        </thead>
        <tbody>
            {% for user in users %}
                {% set faction = '' %}
                {% if user.faction is not null %}
                    {% set faction = '<span style="color:#' ~ user.faction.color ~ '";>' ~ user.faction.title ~ '</span>' %}
                {% endif %}
                <tr>
                    <td>{{ user.username }}</td>
                    <td>{{ faction|raw }}</td>
                    <td class="text-right">{{ user.kills }}</td>
                    <td class="text-right">{{ user.deaths }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}